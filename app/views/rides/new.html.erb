<!-- Google Fonts & Styling -->
<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');

  body {
    font-family: 'Inter', sans-serif;
    background: #f4f7fa;
  }

  .ride-form-container {
    max-width: 500px;
    margin: 80px auto;
    background-color: #fff;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.07);
  }

  .ride-form-container h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 24px;
  }

  .form-group {
    margin-bottom: 18px;
  }

  .form-group label {
    font-weight: 600;
    display: block;
    margin-bottom: 6px;
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 6px;
  }

  .form-actions {
    text-align: center;
    margin-top: 30px;
  }

  .form-actions input {
    background-color: #007bff;
    color: white;
    font-weight: bold;
    padding: 12px 24px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
  }
</style>

<div class="ride-form-container">
  <h2>ðŸš˜ Post a New Ride</h2>

  <%= form_with model: @ride, local: true do |f| %>
    <% if @ride.errors.any? %>
      <div style="background-color: #ffe0e0; padding: 16px; border-radius: 6px; margin-bottom: 20px;">
        <strong><%= pluralize(@ride.errors.count, "error") %>:</strong>
        <ul>
          <% @ride.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :origin, "From" %>
      <%= f.text_field :origin, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :destination, "To" %>
      <%= f.text_field :destination, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :departure_time, "Departure Time" %>
      <%= f.datetime_select :departure_time, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :available_seats, "Number of Seats" %>
      <%= f.number_field :available_seats, min: 1, required: true %>
    </div>

    <div class="form-group">
      <%= f.label :notes, "Notes (optional)" %>
      <%= f.text_area :notes, placeholder: "Any luggage info, pickup details, etc." %>
    </div>

    <div class="form-actions">
      <%= f.submit "Post Ride" %>
    </div>
  <% end %>
</div>
