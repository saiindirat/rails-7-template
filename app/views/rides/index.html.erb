      <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
    </div>
  <% end %>

  <h1>ğŸš˜ Booth Ride Share</h1>

  <% if user_signed_in? %>
    <%= link_to "â• Post a new ride", new_ride_path, class: "btn btn-primary", style: "margin-bottom: 20px;" %>
  <% else %>
    <p><em>Sign in to post a ride.</em></p>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>ğŸ“ From</th>
        <th>ğŸ To</th>
        <th>ğŸ•’ Departure</th>
        <th>ğŸ’µ Price</th>
        <th>ğŸª‘ Total</th>
        <th>âœ… Taken</th>
        <th>ğŸŸ¢ Remaining</th>
        <th>ğŸ–¼ï¸ Image</th>
        <th>ğŸ” View</th>
      </tr>
    </thead>
    <tbody>
      <% @rides.each do |ride| %>
        <tr>
          <td><%= ride.origin.presence || "â€”" %></td>
          <td><%= ride.destination.presence || "â€”" %></td>
          <td><%= ride.departure_time.strftime("%A %d %b, %I:%M %p") %></td>
