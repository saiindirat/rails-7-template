<%# chicago_traffic.jpg must be placed in app/assets/images %>
<style>
  body {
    background: url('<%= asset_path("chicago_traffic.jpg") %>') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Helvetica Neue', sans-serif;
    margin: 0;
    padding: 0;
  }

  .signup-wrapper {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    backdrop-filter: blur(6px);
    background-color: rgba(255, 255, 255, 0.15);
  }

  .signup-container {
    width: 100%;
    max-width: 460px;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 40px 32px;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .signup-container h2 {
    text-align: center;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 24px;
  }

  .form-label {
    font-weight: 600;
    margin-bottom: 6px;
    display: block;
  }

  .form-inputs .input,
  .form-actions input[type="submit"] {
    width: 100%;
    padding: 12px;
    margin-bottom: 20px;
    font-size: 1rem;
    border-radius: 6px;
    border: 1px solid #ccc;
    box-sizing: border-box;
  }

  .form-actions input[type="submit"] {
    background-color: #007bff;
    color: white;
    border: none;
    font-weight: bold;
    transition: background 0.3s;
  }

  .form-actions input[type="submit"]:hover {
    background-color: #0056b3;
  }

  .devise-links {
    text-align: center;
    margin-top: 20px;
  }

  .devise-links a {
    color: #5a0dab;
    text-decoration: underline;
  }
</style>

<div class="signup-wrapper">
  <div class="signup-container">
    <h2>ðŸš€ Sign Up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <label class="form-label">Name</label>
        <%= f.input :name, label: false, required: true, input_html: { autocomplete: "name", class: "input" } %>

        <label class="form-label">Email</label>
        <%= f.input :email, label: false, required: true, autofocus: true, input_html: { autocomplete: "email", class: "input" } %>

        <label class="form-label">Password</label>
        <%= f.input :password,
                    label: false,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "input" } %>

        <label class="form-label">Password Confirmation</label>
        <%= f.input :password_confirmation,
                    label: false,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "input" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
