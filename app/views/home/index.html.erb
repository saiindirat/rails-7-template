<!-- app/views/home/index.html.erb -->

<div style="max-width: 700px; margin: 0 auto; text-align: center; padding-top: 50px;">
  <h1 style="font-size: 3em; font-weight: bold; margin-bottom: 10px;">
    Booth Ride Share
  </h1>

  <p style="font-size: 1.2em; color: #444; margin-bottom: 30px;">
    Coordinating rides to Booth just got easier. Whether you're headed to the Harper Center or riding from downtown, find or offer rides with fellow Booth and UChicago students in seconds.
  </p>

  <% if user_signed_in? %>
    <p>Welcome, <strong><%= current_user.name %></strong>!</p>
    <%= link_to "Go to Rides", rides_path, class: "btn btn-primary", style: "font-size: 1.1em; padding: 10px 20px;" %>
  <% else %>
    <div style="margin-top: 30px;">
      <%= link_to "Sign Up to Get Started", new_user_registration_path, class: "btn btn-success", style: "font-size: 1.2em; padding: 12px 25px;" %>
    </div>
  <% end %>
</div>
